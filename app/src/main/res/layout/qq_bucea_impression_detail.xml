<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE9E0"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/impression_detail_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        layout="@layout/head_activity" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        layout="@layout/qq_bucea_impression_detail_body"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:focusable="true"
            android:clickable="true"
            android:background="@drawable/bucea_impression_detail_emotion_img_xbg" />

        <EditText
            android:id="@+id/et_comment_input"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="6dip"
            android:paddingLeft="7dip"
            android:textSize="13sp"
            android:maxLines="3"
            android:hint="发表您的评论"
             />

        <Button
            android:id="@+id/btn_publish_comment"
            android:layout_width="55dip"
            android:layout_height="30dip"
            android:layout_marginRight="7dip"
            android:background="@drawable/bucea_impression_detail_comment_btn_xbg"
            android:text="评论"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>