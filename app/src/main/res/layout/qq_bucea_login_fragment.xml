<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bucea_user_login_background">
        >
    <include
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        layout="@layout/head_activity" />
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        >
        

        <!-- QQ登录 -->
        <LinearLayout 
            android:id="@+id/ll_qq_login"
            android:layout_width="fill_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dip"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/bucea_qq_login_btn_xbg">
            <ImageView 
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dip"
                android:background="@drawable/bucea_ic_drawer_oauth_qq"/>
             <View 
                android:layout_width="0.8dp"
                android:layout_height="30dp"
                android:layout_marginLeft="13dip"
                android:background="@android:color/white"/>
            <TextView 
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="QQ登录"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
